#!/bin/bash
tty > /dev/null
if [[ $? -eq 0 ]] ; then 
        curl -H 'Authorization: 12345678af' "http://c.acc.si/?c=$1" -XGET 2>/dev/null | xclip -selection c
	xclip -selection clipboard -o
else
        curl -H 'Authorization: 12345678af' -H 'Content-Type: text' "http://c.acc.si/?c=$1" -XPOST -d @- 2>/dev/null <&0
fi
